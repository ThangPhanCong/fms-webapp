pipeline {
    agent {
        label 'master'
    }

    stages {
      stage('Install Dependencies') {
          steps {
              sh 'rm -rf node_modules'
              sh 'npm i'
          }
      }

      stage('Build') {
          steps {
              sh 'npm run build-staging'
          }
      }

      stage('Deploy to staging') {
          steps {
			        sh 'sudo rm -rf /var/www/adsbold/staging'
              sh 'sudo cp -R ./build/ /var/www/adsbold/staging/'
          }
      }
    }
}
